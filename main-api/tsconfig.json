{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "paths": {
      "@src/*": ["./src/*"],
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"],
      "@main/*": ["./src/main/*"],
      "@data/*": ["./src/data/*"],
      "@validation/*": ["src/main/middlewares/validation/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/main/controllers/management/signIn/.controller.ts",
    "src/main/controllers/management/signIn/.controller.ts"
  ],
  "exclude": ["node_modules"]
}
